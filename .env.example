# Bubbles Project Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# DEVELOPMENT ENVIRONMENT SETTINGS
# ===========================================

NODE_ENV=development
PORT=3000
API_PORT=5000

# ===========================================
# DATABASE SETTINGS
# ===========================================

DATABASE_URL=mongodb://localhost:27017/bubbles-dev

# ===========================================
# JIRA INTEGRATION
# ===========================================

JIRA_BASE_URL=https://bubblebase64.atlassian.net
JIRA_USER_EMAIL=your-email@domain.com
JIRA_API_TOKEN=your-jira-api-token-here

# ===========================================
# NEWS API KEYS
# ===========================================

NEWS_API_KEY=your-news-api-key-here
GUARDIAN_API_KEY=your-guardian-api-key-here

# ===========================================
# AI/ML SERVICE KEYS
# ===========================================

OPENAI_API_KEY=your-openai-api-key-here
HUGGING_FACE_API_KEY=your-hugging-face-key-here

# ===========================================
# SECURITY SETTINGS
# ===========================================

JWT_SECRET=your-super-secret-jwt-key
SESSION_SECRET=your-session-secret

# ===========================================
# EXTERNAL SERVICES
# ===========================================

REDIS_URL=redis://localhost:6379
EMAIL_SERVICE_API_KEY=your-email-service-key

# ===========================================
# LOGGING & MONITORING
# ===========================================

LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Pre-commit configuration
PRE_COMMIT_ENABLED=false

# Code quality settings
ESLINT_ENABLED=true
PRETTIER_ENABLED=true
BLACK_ENABLED=true
